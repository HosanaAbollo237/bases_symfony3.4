{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cars list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Price</th>
                <th>Navigation</th>
                <th>Year</th>
                <th>Promote</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr style="text-align: center;">
                <td><a href="{{ path('car_show', { 'id': car.id }) }}">{{ car.id }}</a></td>
                <td>{{ car.description }}</td>
                <td>{{ car.price }}</td>
                <td>{% if car.navigation %}Yes{% else %}No{% endif %}</td>
                <td>{{ car.year }}</td>
                <td>{% if car.promote %} Yes {% else %} No {% endif %}</td>
                <td>
                    <ul style="padding:0;">
                        <li>
                            <a href="{{ path('car_show', { 'id': car.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('car_edit', { 'id': car.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('car_promote', { 'id': car.id }) }}">promote</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('car_new') }}">Create a new car</a>
        </li>
    </ul>
{% endblock %}
